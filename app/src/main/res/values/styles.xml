<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HeaderTextStyle" parent="AlertDialog.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/headerLayoutHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:background">#009688</item>
        <item name="android:paddingLeft">@dimen/headerPaddingLeft</item>
    </style>
    <style name="TitleTextStyle" parent="AlertDialog.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titleLayoutHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="optionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
